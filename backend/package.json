{
  "name": "sfu-ai-teacher-backend",
  "version": "1.0.0",
  "description": "SFU AI Teacher/Tutor - Cloudflare Workers Backend",
  "type": "module",
  "scripts": {
    "dev": "npm run db:migrate:local && wrangler dev --config wrangler.jsonc",
    "dev:only": "wrangler dev --config wrangler.jsonc",
    "deploy": "wrangler deploy --config wrangler.jsonc",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 execute sfu-ai-teacher-db --file=./sql/schema.sql",
    "db:migrate:local": "wrangler d1 execute sfu-ai-teacher-db --local --file=./sql/schema.sql",
    "db:seed": "wrangler d1 execute sfu-ai-teacher-db --file=./sql/seed.sql",
    "db:seed:local": "wrangler d1 execute sfu-ai-teacher-db --local --file=./sql/seed.sql",
    "db:reset:local": "npm run db:migrate:local && npm run db:seed:local",
    "db:studio": "wrangler d1 studio sfu-ai-teacher-db --local"
  },
  "keywords": [
    "sfu",
    "voice",
    "ai",
    "tutor",
    "cloudflare",
    "education"
  ],
  "author": "xhacks2026 Team",
  "license": "MIT",
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.33.0",
    "hono": "^4.7.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260131.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0",
    "wrangler": "^4.61.1"
  }
}
