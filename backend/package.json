{
  "name": "sfu-ai-teacher-backend",
  "version": "1.0.0",
  "description": "SFU AI Teacher/Tutor - Cloudflare Workers Backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --config wrangler.jsonc",
    "deploy": "wrangler deploy --config wrangler.jsonc",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute DB --remote --file=./sql/schema.sql",
    "db:migrate:local": "wrangler d1 execute DB --local --file=./sql/schema.sql"
  },
  "keywords": ["sfu", "voice", "ai", "tutor", "cloudflare", "education"],
  "author": "xhacks2026 Team",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.7.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260131.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.1"
  }
}
